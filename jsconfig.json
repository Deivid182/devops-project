{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#controllers/*": ["controllers/*"],
      "#models/*": ["models/*"],
      "#utils/*": ["utils/*"],
      "#config/*": ["config/*"],
      "#routes/*": ["routes/*"],
      "#services/*": ["services/*"],
      "#middleware/*": ["middleware/*"],
      "#validations/*": ["validations/*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}